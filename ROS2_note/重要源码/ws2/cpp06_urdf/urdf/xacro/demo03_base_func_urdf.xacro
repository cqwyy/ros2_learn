<!-- 宏的定义和调用 -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="demo03_func">
    <!-- 宏的定义:宏的名以及参数 -->
    <xacro:macro name="get_sum" params="num1 num2">
        <sum value="${num1 + num2}"/>
    </xacro:macro>
    <!-- 宏的调用 宏名以及参数调用 -->
    <xacro:get_sum num1="20" num2="30"/>
    <xacro:get_sum num1="50" num2="90"/>
    
</robot>